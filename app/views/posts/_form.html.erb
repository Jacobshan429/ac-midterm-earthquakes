<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @post do |f| %>

  <%= f.label :title, "Title" %><br>
  <%= f.text_field :title %>

  <br>

  <%= f.label :content, "Content" %><br>
  <%= f.text_area :content %>

  <br>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  <br>
  <%= f.submit %>

<% end %>